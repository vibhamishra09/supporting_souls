generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AuthProvider {
  LOCAL
  GOOGLE
}

model User {
  id           Int          @id @default(autoincrement())
  email        String       @unique
  fullName     String?
  googleId     String?      @unique
  picture      String?
  authProvider AuthProvider @default(GOOGLE)
  createdAt    DateTime     @default(now())
}
